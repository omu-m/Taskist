<div class="row">
  <div class="col-11 mx-auto">
    <div class="row">
      <div class="col-12 col-md-3 mt-5 mx-auto">
        <%= render "admin/members/info", member: @member %>
      </div>

      <div class="col-12 col-md-8 mx-auto mb-5">
        <%= render "admin/targets/index", targets: @targets %>
      </div>

        <% if @favorites.count == 0 %>
          <div class="row">
            <div class="col-12">
              <h3 class="mt-5 text-center">まだ登録されたお気に入りはありません</h3>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>