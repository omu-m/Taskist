<% target.tasks.each do |task| %>
  <div class="row border-top border-dark pt-2">
    <div class="col-1">
      <%= task.created_at.strftime('%Y-%m-%d %H:%M') %>
    </div>
    <div id="target-<%= @target.id %>" class="col-11">
      <div class="row">
        <div class="col-12 col-md-10">
          <%= safe_join(task.content.split("\n"),tag(:br)) %>
        </div>
        <div class="col-12 col-md-2">
          <% if task.member == current_member %>
            <%= link_to "編集", edit_target_task_path(task.target, task), class: "btn btn-sm btn-success" %>
            <%= link_to "削除", target_task_path(task.target, task), remote: true, method: :delete, data: { confirm: "OKを押すと目標の「#{task.content}」が削除されます。本当によろしいですか？"}, class: "btn btn-sm btn-danger" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>