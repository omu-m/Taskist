<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #5F9EA0">
    <div class="container">
      <% if admin_signed_in? %>
        <a class="navbar-brand p-3 text-light" href="/admin">Taskist.</a>
      <% elsif member_signed_in? %>
        <a class="navbar-brand p-3 text-light" href="/targets">Taskist.</a>
      <% else %>
        <a class= "navbar-brand p-3 text-light" href='/'>Taskist.</a>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <!--管理者側/ログイン後-->
        <% if admin_signed_in? %>
          <li class="nav-item text-center">
            <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
              <i class="fa-solid fa-right-from-bracket"></i><br>ログアウト
            <% end %>
          </li>

        <!--会員側/ログイン後-->
        <% elsif member_signed_in? %>
          <li class="nav-item text-center">
            <%= link_to targets_path, class: "nav-link text-light" do %>
              <i class="fa-solid fa-list-check"></i><br>みんなの目標
            <% end %>
          </li>
          <li class="nav-item text-center">
            <%= link_to member_path(current_member), class: "nav-link text-light" do %>
              <i class="fa-solid fa-user"></i><br>マイページ
            <% end %>
          </li>
          <li class="nav-item text-center">
            <%= link_to destroy_member_session_path, method: :delete, class: "nav-link text-light" do %>
              <i class="fa-solid fa-right-from-bracket"></i><br>ログアウト
            <% end %>
          </li>

        <!--ログイン前-->
        <% else %>
          <li class="nav-item text-center">
            <%= link_to new_member_registration_path, class: "nav-link text-light" do %>
              <i class="fa-solid fa-user-plus"></i><br>新規登録
            <% end %>
          </li>
          <li class="nav-item text-center">
            <%= link_to new_member_session_path, class: "nav-link text-light" do %>
              <i class="fa-solid fa-right-to-bracket"></i><br>ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>